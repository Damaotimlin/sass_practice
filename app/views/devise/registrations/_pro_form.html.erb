<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="container">
    <%= devise_error_messages! %>
  </div>
  <div  class="alert" id="stripe-alert-div" role="alert">
    <strong id="stripe-alert-text"></strong>
  </div>
  
  <%= hidden_field_tag 'plan', params[:plan]%>
  
  <fieldset>
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class:'form-control', placeholder:'Your Eamil account:' %>
  </fieldset>

  <fieldset class="field form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class:'form-control', placeholder:'Passw***' %>
  </fieldset>

  <fieldset class="field form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class:'form-control', placeholder:'Confirmed passw***' %>
  </fieldset>
  <fieldset class=" field form-group">
    <%= label_tag :card_number, "Credit Card Number" %>
    <%= text_field_tag :card_number, nil, name: nil, class:'form-control', placeholder:'****-****-****-****' %>
  </fieldset>
  <fieldset class="field form-group">
    <%= label_tag :card_code, "Security Code on Card (CVV)" %>
    <%= text_field_tag :card_code, nil, name: nil, class:'form-control', placeholder:'This code is on the back of your credit card: ***' %>
  </fieldset>
  <fieldset class="field form-group">
    <%= label_tag :card_month, "Card Expiration" %>
    <%= select_month nil, {add_month_numbers: true}, {name: nil, id: "card_month"} %>
    <%= select_year nil, {start_year: Date.today.year-15, end_year: Date.today.year+15}, {name: nil, id: "card_year"} %>
  </fieldset>
  
  <div class="container">
    <%= f.submit "Sign up", class:'actions btn btn-info', id:'pro-form-submit-btn' %>
    <!--<button type="button" class="btn btn-secondary-outline">-->
    <!--  <%= render "devise/shared/links"%>-->
    <!--</button>-->
  </div>
<% end %>