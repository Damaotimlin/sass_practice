<div class="col-md-6 col-md-offset-3">
  <div class="jumbotron">
    <div class="container text-center">
      <% if params[:plan] == '2'%>
        <h2>Pro account</h2>
        <p>Apply Pro account for $10 per month</p>
        </br>
      <% else %>
        <h2>Basic account</h2>
        <p>Feel free to join us !</p>
        </br>
      <% end %>
    </div>
    <h3>Sign up</h3>
    <% if params[:plan] == '1' %>
      <%= render "basic_form"%>
    <% else %>
      <%= render "pro_form"%>
    <% end %>
  </div>
</div>