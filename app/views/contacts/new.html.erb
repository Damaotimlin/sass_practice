<div>
    <%= form_for @contact do |f| %>
    <form>
        <fieldset class="form-group">
            <%= f.label :name, for:'formGroupExampleInput'%>
            <%= f.text_field :name, class:'form-control'%>
        </fieldset>
        
        <fieldset class="form-group">
            <%= f.label :email, for:'formGroupExampleInput'%>
            <%= f.text_field :email, class:'form-control'%>
        </fieldset>
        
        <fieldset class="form-group">
            <%= f.label :comments, for:'formGroupExampleInput'%>
            <%= f.text_area :comments, class:'form-control'%>
        </fieldset>
    </form>
    
    <%end%>
</div>